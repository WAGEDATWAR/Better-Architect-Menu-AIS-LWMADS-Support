<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Remove Designator_RemoveFoundation from former Odyssey category. Moved to Ferny_SpacePlatform. -->
	<Operation Class="PatchOperationRemove">
		<xpath>/Defs/DesignationCategoryDef[defName="Odyssey"]/specialDesignatorClasses/li[text()="Designator_RemoveFoundation"]</xpath>
	</Operation>

    <!-- ORBIT CATEGORY -->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>Defs/DesignationCategoryDef[defName="Odyssey"]/order</xpath>
        <value>
            <order>1</order>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>Defs/DesignationCategoryDef[defName="Odyssey"]/label</xpath>
        <value>
            <label>More</label>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/DesignationCategoryDef[defName="Odyssey"]</xpath>
        <value>
            <modExtensions>
            <li Class="BetterArchitect.NestedCategoryExtension">
                <parentCategory>Ferny_Space</parentCategory>
            </li>
            </modExtensions>
        </value>
    </Operation>

